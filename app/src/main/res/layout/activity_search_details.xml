<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.evely.android.evelymobileapplication.MainActivity">

    <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent"
                app:title="@string/tab_title_home"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                android:contentInsetLeft="0dp"
                android:contentInsetStart="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                    android:id="@+id/dummy_search_box"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dummy_search_height"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_dummy_search"
                    android:gravity="bottom"
                    android:paddingBottom="10dp"
                    android:paddingEnd="@dimen/dummy_search_padding_horizontal"
                    android:paddingLeft="@dimen/dummy_search_padding_horizontal"
                    android:paddingRight="@dimen/dummy_search_padding_horizontal"
                    android:paddingStart="@dimen/dummy_search_padding_horizontal"
                    android:singleLine="true"
                    android:text="@string/search_hint"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/action_advanced_filtering_wrapper"
                    app:layout_constraintTop_toTopOf="parent" />
                <com.evely.android.evelymobileapplication.view.design.PressEffectWrapper
                        android:id="@+id/action_advanced_filtering_wrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="72dp"
                        android:layout_marginEnd="72dp"
                        app:revealedDrawable="@drawable/bg_button_pressed_circular"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent">
                    <ImageView
                            android:id="@+id/action_advanced_filtering"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:padding="12dp"
                            app:srcCompat="@drawable/ic_filter"
                            android:alpha="0.54"
                            android:clickable="true"/>
                </com.evely.android.evelymobileapplication.view.design.PressEffectWrapper>
                <com.evely.android.evelymobileapplication.view.design.PressEffectWrapper
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_marginEnd="8dp"
                        app:revealedDrawable="@drawable/bg_button_pressed_circular"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent">
                    <ImageView
                            android:id="@+id/action_overflow"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:padding="12dp"
                            app:srcCompat="@drawable/ic_overflow_menu2"
                            android:alpha="0.54"
                            android:clickable="true"/>
                </com.evely.android.evelymobileapplication.view.design.PressEffectWrapper>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.Toolbar>
        <android.support.design.widget.TabLayout
                android:id="@+id/tab_navigation_container"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:tabPadding="15dp"
                app:tabSelectedTextColor="@color/colorAccent"
                app:tabIndicatorColor="@color/colorAccent"
                app:tabBackground="@color/colorComponentBackground"
                android:background="@color/colorComponentBackground"
                app:tabMode="scrollable">
            <android.support.design.widget.TabItem
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Top"
            />

            <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latest"
            />

            <android.support.design.widget.TabItem
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Events"
            />

            <android.support.design.widget.TabItem
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="People"
            />

            <android.support.design.widget.TabItem
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Locations"
            />
        </android.support.design.widget.TabLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_results"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"/>
</android.support.design.widget.CoordinatorLayout>
